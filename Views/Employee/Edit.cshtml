@model EmployeeManagement.Models.Employee
<h2>Edit Employee</h2>
<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="mb-3"><label asp-for="Name"></label><input asp-for="Name" class="form-control" /></div>
    <div class="mb-3"><label asp-for="Position"></label><input asp-for="Position" class="form-control" /></div>
    <div class="mb-3"><label asp-for="Age"></label><input asp-for="Age" class="form-control" /></div>
    <button type="submit" class="btn btn-success">Save</button>
</form>